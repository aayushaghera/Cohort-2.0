generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id      Int     @id @default(autoincrement()) // Unique user ID, auto-increases
  email   String  @unique                      // User's email, must be unique
  name    String?                              // User's name, optional (can be empty)
  posts   Post[]                               // One user can have many posts
}
model Post {
  id        Int     @id @default(autoincrement()) // Unique post ID
  title     String                              // Post title (required)
  content   String?                             // Post content (optional)
  published Boolean @default(false)             // Whether the post is published or not (default is false)
  author    User    @relation(fields: [authorId], references: [id]) // Link to User who wrote it
  authorId  Int                                  // Stores the ID of the author (user)
}
